<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="txtStyleSandrift" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#626954</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/custom_text_sandrift</item>
        <item name="android:padding">10dip</item>
        <item name="android:width">@dimen/widget_width</item>
        <item name="android:layout_marginBottom">@dimen/widget_margin</item>
    </style>

